<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F66060"
    android:id="@id/scroll"
    android:layout_height="match_parent" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            tools:context=".RegisterActivity">

                 <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="157dp"
                    android:layout_height="51dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="133dp"
                    android:layout_marginEnd="233dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/registration"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="42dp"
                    android:textStyle="italic" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView2"
                    android:layout_width="137dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="237dp"
                    android:layout_marginEnd="256dp"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView3"
                    android:layout_width="159dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="311dp"
                    android:layout_marginEnd="234dp"
                    android:gravity="center"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView4"
                    android:layout_width="164dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="493dp"
                    android:layout_marginEnd="224dp"
                    android:gravity="center"
                    android:text="Contact no"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/contactno"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="491dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="Contact No"
                    android:importantForAutofill="no"
                    android:inputType="text|number"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView5"
                    android:layout_width="161dp"
                    android:layout_height="49dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="575dp"
                    android:layout_marginEnd="220dp"
                    android:gravity="center"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Address"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactno"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="571dp"
                    android:layout_marginEnd="-2dp"
                    android:gravity="center"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="764dp"
                    android:layout_marginEnd="-4dp"
                    android:gravity="center"
                    android:hint="User name"
                    android:inputType="textShortMessage"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/auth"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_below="@+id/city"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/lobster_regular"
                    android:gravity="center"
                    android:text="User Authentication"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/bloodgroup5"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/city"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="189dp"
                    android:layout_marginEnd="1dp"
                    android:gravity="center"
                    android:text="*Password must be 4 digit"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/bloodgroup"
                    android:layout_width="217dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/city"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="447dp"
                    android:layout_marginEnd="77dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Profile Picture"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/bloodgroup6"
                    android:layout_width="217dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/city"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="224dp"
                    android:layout_marginEnd="179dp"
                    android:gravity="center"
                     android:text="Blood group"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="217dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/city"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="306dp"
                    android:layout_marginEnd="177dp"
                    android:background="@color/white"
                    android:fontFamily="@font/lobster"
                    android:gravity="center"
                    android:text="Your UID id is"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/uid"
                    android:layout_width="165dp"
                    android:layout_height="47dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="998dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#EA0303"
                    android:textStyle="bold"
                    android:textSize="25dp" />

                <Spinner
                    android:id="@+id/blood"
                    android:layout_width="173dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/password"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="38dp"
                    android:layout_marginEnd="6dp"
                    android:prompt="@string/spinner_title"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="238dp"
                    android:layout_height="102dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="102dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="Name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="250dp"
                    android:layout_height="69dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="221dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:hint="Email"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/age"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="313dp"
                    android:layout_marginEnd="-8dp"
                    android:gravity="center"
                    android:hint="Age"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnupload"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_below="@+id/bloodgroup"
                    android:layout_alignRight="@+id/blood"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="74dp"
                    android:layout_marginTop="231dp"
                    android:layout_marginEnd="74dp"
                    android:layout_marginRight="67dp"
                    android:gravity="center"
                    android:text="upload image"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="830dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Address"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="644dp"
                    android:layout_marginEnd="-3dp"
                    android:gravity="center"
                    android:hint="City"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView6"
                    android:layout_width="159dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="645dp"
                    android:layout_marginEnd="221dp"
                    android:gravity="center"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/status1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/regbtn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="#F66060" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/regbtn"
                    android:layout_width="391dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/blood"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="false"
                    android:layout_marginTop="545dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:text="register"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="216dp"
                    android:layout_height="169dp"
                    android:layout_below="@+id/checkBox"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="77dp"
                    android:layout_marginTop="1209dp"
                    android:layout_marginEnd="77dp"
                    android:background="@color/white"
                    android:foregroundGravity="center"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/profiler" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/blood"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="118dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/white"
                    android:fontFamily="@font/lobster"
                    android:gravity="center"
                    android:text="I want to be a donor"
                    android:textColor="#FF0202"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnupload"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="166dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginBottom="33dp" />


                <TextView
                    android:id="@+id/gend"
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="367dp"
                    android:layout_marginEnd="36dp"
                    android:focusable="true"
                    android:gravity="left"
                    android:text="              Gender"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="373dp"
                    android:layout_height="57dp"
                    android:layout_below="@+id/age"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="51dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/Female"
                            android:layout_width="179dp"
                            android:layout_height="57dp"
                            android:layout_below="@id/gend"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="1dp"
                            android:onClick="onRadioButtonClicked"
                            android:paddingRight="50dp"
                            android:text="Female"
                            android:textSize="20dp" />

                        <RadioButton
                            android:id="@+id/Male"
                            android:layout_width="166dp"
                            android:layout_height="57dp"
                            android:layout_below="@+id/age"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="711dp"
                            android:onClick="onRadioButtonClicked"
                            android:text="Male"
                            android:textSize="20dp" />
                </RadioGroup>

        </RelativeLayout>



</ScrollView>