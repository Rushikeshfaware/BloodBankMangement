<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scroll"
    android:background="#27ECAD"
    android:focusable="true"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".Profile">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/help"
            android:layout_width="167dp"
            android:layout_height="65dp"
            android:layout_below="@+id/edit"
            android:layout_marginStart="4dp"
            android:layout_marginTop="73dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="35dp"
            android:background="#3949AB"
            android:gravity="center"
            android:text="Help"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="167dp"
            android:layout_height="65dp"
            android:layout_below="@+id/edit"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="73dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="35dp"
            android:background="#3949AB"
            android:gravity="center"
            android:text="Exit"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/id2"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:layout_below="@+id/city"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="165dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="  Your UID id is"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/uid2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/blood"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="#E80C0C"
            android:textSize="25dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="249dp"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            android:layout_marginStart="66dp"
            android:layout_marginTop="12dp"
            android:background="#ECECEC"
             android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textStyle="bold"
            android:text="I want to be a donor"
            android:textColor="#034AC1"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/upload"
            android:layout_width="102dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="0dp"
            android:text="change or
            upload image"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="199dp"
            android:layout_height="135dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="48dp"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/bloodgroup"
            android:layout_width="212dp"
            android:layout_height="57dp"
            android:layout_below="@+id/city"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="190dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Blood group"
            android:textColor="#FF3A3A"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/bloodgroup4"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="*Please fill only in A+/B+/A-/A+/O+......"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/blood"
            android:layout_width="180dp"
            android:layout_height="51dp"
            android:layout_below="@+id/city"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="@color/black"

            android:inputType="textCapCharacters"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="13dp"
            android:gravity="center"
            android:hint="Name"
            android:textColor="@color/black"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="228dp"
            android:layout_height="72dp"
            android:layout_below="@+id/gender"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="244dp"
            android:layout_height="51dp"
            android:layout_below="@+id/Address"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="153dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="-19dp"
            android:gravity="center"
            android:hint="City"
            android:inputType="textPostalAddress"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/Address"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactno"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="17dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="Address"
            android:inputType="text"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/gender"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="-10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="gender"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="13dp"
            android:gravity="center"
            android:hint=" Age"
            android:textColor="@color/black"
            android:inputType="text|number"
            android:textSize="25dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="cancel"
            android:textSize="25dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/bloodgroup"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="-2dp"
            android:gravity="center"
            android:text="Edit"
            android:textSize="25dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update"
            android:layout_width="396dp"
            android:layout_height="60dp"
            android:layout_below="@+id/bloodgroup"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="update"

            android:textSize="25dp" />

        <TextView
            android:id="@+id/ager"
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:layout_below="@id/name"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="82dp"
            android:gravity="center"
            android:paddingLeft="-54dp"
            android:text="Age :-"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/ager2"
            android:layout_width="114dp"
            android:layout_height="47dp"
            android:layout_below="@id/name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-51dp"
            android:gravity="center"
            android:text="Name :-"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_below="@id/checkBox2"
            android:layout_alignLeft="@+id/contactno"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="254dp"
            android:gravity="center"
            android:text="Contact no :-"
            android:textColor="@color/black"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_below="@id/img2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-183dp"
            android:layout_marginEnd="0dp"
            android:background="@color/black"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/contactno"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:hint="Contact No"
            android:textColor="@color/black"
            android:inputType="text|number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="-46dp"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="Email :-"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="144dp"
            android:layout_height="53dp"
            android:layout_below="@id/checkBox2"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="325dp"
            android:gravity="center"
            android:text="Address :-"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="145dp"
            android:layout_height="52dp"
            android:layout_alignLeft="@id/city"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="91dp"
            android:gravity="center"
            android:paddingLeft="-54dp"
            android:text="City :-"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="144dp"
            android:layout_height="45dp"
            android:layout_below="@id/ager"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingLeft="-54dp"
            android:text="       Gender :-"
            android:textColor="@color/black"
            android:textSize="25dp" />


    </RelativeLayout>



</ScrollView>