<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.software2.bloodbankmanagement">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bloodicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bloodicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodBankManagement">
        

        <activity
            android:name=".splash"
            android:exported="true"
             android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Bloodbank"
            android:label="Blood Bank"
             android:exported="true"
            android:theme="@style/Theme.TabbedTut.NoActionBar"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".searchdonor"
            android:label="Search donor"
            android:theme="@style/Theme.TabbedTut.NoActionBar"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".request"
            android:label="Blood Requests"
             android:exported="true"
            android:theme="@style/Theme.TabbedTut.NoActionBar"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".help"
            android:label="Help"
            android:theme="@style/AppTheme.sliderActivity"
            android:exported="true" />
        <activity
            android:name=".Profile"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="My Profile"
              android:exported="true"
            tools:ignore="Instantiatable" />

        <activity android:name=".Tabbed"
              android:exported="true"/>
        <activity
            android:name=".Login"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:label="Registration"
            android:theme="@style/AppTheme.sliderActivity"
            android:exported="true" />
    </application>

</manifest>